<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>banner管理页面</title>
</head>
<body>
<div class="page">
    <% include components/top.inc.ejs %>
    <div class="content-wrap">
        <div>
            <form action="?" method="post">
                标题：<input type="text" name="title"><br/>
                描述：<textarea name="description"></textarea><br>
                链接：<input type="text" name="href"><br>
                <input type="submit" value="提交">
            </form>
        </div>
        <table width="80%" border="1">
            <thead>
            <tr>
                <td width="5%">ID</td>
                <td width="25%">标题</td>
                <td width="40%">描述</td>
                <td width="20%">href</td>
                <td width="10%">操作</td>
            </tr>
            </thead>
            <% banner %>
            <tbody>
            <% for(var i=0; i<banner.length;i++){%>
            <tr>
                <td><%=banner[i].ID %></td>
                <td><%=banner[i].title %></td>
                <td><%=banner[i].description %></td>
                <td><%=banner[i].href %></td>
                <td>
                    <a href="?act=mod&id=<%=banner[i].ID%>">修改</a>
                    <a href="?act=del&id=<%=banner[i].ID%>" onclick="return confirm('你真的要删吗?')">删除</a> </td>
            </tr>
            <% } %>
            </tbody>
        </table>
        <% if(typeof mod_data!='undefined'){%>
        <div>
            <form action="?" method="post">
                <input type="hidden" name="mod_id" value="<%= mod_data.ID %>" />
                标题：<input type="text" name="title" value="<%=mod_data.title%>"><br/>
                描述：<textarea name="description"><%=mod_data.description%></textarea><br>
                链接：<input type="text" name="href" value="<%=mod_data.href%>"><br>
                <input type="submit" value="修改">
                <a href="/admin/banners">取消修改</a>
            </form>
        </div>
        <% } %>
    </div>
</div>
</body>
</html>